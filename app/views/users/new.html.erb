<%= form_for @user do |f| -%>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
  <%= f.label :password, "Password" %>
  <%= f.password_field :password %><%= f.label :nausea, "Nausea" %>
  <%= f.text_field :nausea %>
  <%= f.label :happiness, "Happiness" %>
  <%= f.text_field :happiness %>
  <%= f.label :tickets, "Tickets" %>
  <%= f.text_field :tickets %>
  <%= f.label :height, "Height" %>
  <%= f.text_field :height %>
  <%= f.label :admin, "Admin?" %>
  <%= f.check_box :admin %>
  <%= f.submit "Create User", :disable_with => 'Submiting...' %>
<% end %>